<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <!--filter 标签用于注册配置一个 Filter 过滤器-->
    <filter>
        <!--设置 Filter 名称-->
        <filter-name>MyFilter</filter-name>
        <!--设置 Filter 全类名（完整名称）-->
        <filter-class>com.javaweb.filter.MyFilter</filter-class>

        <init-param>
            <param-name>初始化参数名1</param-name>
            <param-value>初始化参数值1</param-value>
        </init-param>
        <init-param>
            <param-name>初始化参数名2</param-name>
            <param-value>初始化参数值2</param-value>
        </init-param>

    </filter>
    
    <!--filter-mapping 标签用于配置 Filter 过滤器的拦截路径（资源）-->
    <filter-mapping>
        <!--filter-name 标签表示当前的拦截路径给哪个 Filter 过滤器使用（匹配上面的<filter-name>）-->
        <filter-name>MyFilter</filter-name>

        <!--
            url-pattern 标签配置拦截路径（访问该路径就拦截）
            /   表示请求地址为：  http://ip:port/工程路径/  （映射到 IDEA 的 webapp 目录）
            /admin/*   表示请求地址为：  http://ip:port/工程路径/admin/*   （admin 目录下的全部）
         -->
        <!--在一个过滤器下可以配置多个拦截路径-->
        <url-pattern>/admin/*</url-pattern>
        <url-pattern>/Servlet</url-pattern><!--对该 servlet 进行拦截-->
        <dispatcher>REQUEST</dispatcher><!--默认拦截的请求-->
        <dispatcher>FORWARD</dispatcher><!--拦截通过 RequestDispatcher 的 forward() 方法访问目标资源的请求-->
    </filter-mapping>



    <!--Filter 链中各个 Filter 的拦截顺序和它们在 web.xml 文件中 <filter-mapping> 的从上到下的映射顺序一致-->
    <filter>
        <filter-name>MyFilterChain1</filter-name>
        <filter-class>com.javaweb.filter.MyFilterChain1</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MyFilterChain1</filter-name>
        <url-pattern>/filter.jsp</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>MyFilterChain2</filter-name>
        <filter-class>com.javaweb.filter.MyFilterChain2</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MyFilterChain2</filter-name>
        <url-pattern>/filter.jsp</url-pattern>
    </filter-mapping>



</web-app>